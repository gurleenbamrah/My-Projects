<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/entrantMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:padding="20dp">

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel_decorative"
        android:text="TROJAN0"
        android:textColor="#8C52FF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/mainEntrantIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/logoText"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:contentDescription="Profile Picture"
        android:background="@drawable/circular_ring"
        android:clipToOutline="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/mainEntrantTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainEntrantIcon"
        android:layout_centerHorizontal="true"
        android:text="Welcome %s"
        android:fontFamily="@font/quicksand"
        android:textSize="32sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/update_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainEntrantTitle"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/quicksand"
        android:backgroundTint="@color/purple"
        android:text="Update Profile"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/scan_qr_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_profile_button"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/quicksand"
        android:backgroundTint="@color/purple"
        android:text="Scan QR Code"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/view_all_events_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_qr_code_button"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/quicksand"
        android:backgroundTint="@color/purple"
        android:text="View All Events"
        android:textColor="#FFFFFF" />

</RelativeLayout>
