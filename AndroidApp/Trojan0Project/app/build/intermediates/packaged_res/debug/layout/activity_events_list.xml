<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel_decorative"
        android:text="TROJAN0"
        android:textColor="#8C52FF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Toolbar positioned above "All Events" -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/leave_view_all_events_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="My App Title" />

    <!-- "All Events" TextView overlaying the Toolbar -->
    <TextView
        android:id="@+id/EventsPageDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Your Events"
        android:textColor="@android:color/black"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:textSize="40sp" />

    <!-- RecyclerView below the No events text -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/endOfEventsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="End of events list"
        android:textColor="#888888"
        android:fontFamily="@font/quicksand"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="8dp" />
</LinearLayout>
